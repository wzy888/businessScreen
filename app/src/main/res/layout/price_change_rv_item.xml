<?xml version="1.0" encoding="utf-8"?>
<com.zhumei.baselib.widget.percent_support_extends.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rv_price_change_bg"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_price_change_serial_number"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_textSizePercent="5%sw"
        app:layout_marginTopPercent="2%sw"
        app:layout_marginBottomPercent="2%sw"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tv_price_change_goods_name"
        android:gravity="center"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        app:layout_textSizePercent="5%sw"
        app:layout_marginTopPercent="2%sw"
        app:layout_marginBottomPercent="2%sw"
        android:textColor="@color/colorWhite"/>

    <EditText
        android:id="@+id/et_price_change_price"
        android:gravity="center"
        android:background="@drawable/et_price_change_selector"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        app:layout_textSizePercent="5%sw"
        app:layout_marginTopPercent="2%sw"
        app:layout_marginBottomPercent="2%sw"
        android:textStyle="bold"
        android:inputType="number"
        android:textColor="@color/colorPriceTextBlue"/>

    <TextView
        android:id="@+id/tv_price_change_unit_name"
        android:gravity="center"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        app:layout_textSizePercent="5%sw"
        app:layout_marginTopPercent="2%sw"
        app:layout_marginBottomPercent="2%sw"
        android:textColor="@color/colorWhite"/>

    <com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2">

        <CheckBox
            android:id="@+id/cb_price_change_for_sale"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_price_change_selector_tv"
            android:focusable="true"/>

    </com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>

    <com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        app:layout_marginTopPercent="2%sw"
        app:layout_marginBottomPercent="2%sw">

        <Button
            android:id="@+id/bt_price_change_delete"
            android:layout_centerInParent="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_widthPercent="14%sh"
            android:textColor="@color/colorPriceTextBlue"
            app:layout_textSizePercent="5%sw"
            android:background="@drawable/btn_price_change_selector"
            android:text="@string/bt_price_change_delete"/>

    </com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>
</com.zhumei.baselib.widget.percent_support_extends.PercentLinearLayout>