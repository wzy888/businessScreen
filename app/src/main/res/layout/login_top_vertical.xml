<?xml version="1.0" encoding="utf-8"?>
<com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_login_top_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/high_definition_logo"
            app:layout_heightPercent="18%sw"
            app:layout_widthPercent="18%sw"/>

        <com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
            android:layout_below="@+id/iv_login_top_logo"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_login_top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_login_top_title"
                app:layout_textSizePercent="3%sw"
                app:layout_marginTopPercent="1%sw"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/tv_login_top_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_textSizePercent="3%sw"
                app:layout_marginTopPercent="1%sw"
                android:textColor="@color/colorWhite"
                android:layout_toEndOf="@+id/tv_login_top_title"
                android:layout_toRightOf="@+id/tv_login_top_title"/>

        </com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>
    </com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>
</com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>
