<?xml version="1.0" encoding="utf-8"?>
<com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <!--login界面的上半部分-->
    <include layout="@layout/login_top_horizontal"
             android:id="@+id/include_login_top"
             android:layout_height="0dp"
             app:layout_heightPercent="50%sh"
             android:layout_width="match_parent"/>

    <!--login界面的下半部分-->

    <!--网络展示图标-->
    <include
        layout="@layout/login_bottom_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/include_login_top"
        android:layout_marginTop="-10dp"
        app:layout_heightPercent="50%sh" />

    <include layout="@layout/netlogo_info_horizontal"/>

</com.zhumei.baselib.widget.percent_support_extends.PercentRelativeLayout>